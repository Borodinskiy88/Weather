<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Weather" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/PRIMARY_600</item>
        <item name="colorPrimaryVariant">@color/PRIMARY_50</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimarySurface">@color/PRIMARY_50</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/SECONDARY_200</item>
        <item name="colorSecondaryVariant">@color/SECONDARY_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/PRIMARY_600</item>
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">@color/PRIMARY_500</item>
        <!-- SplashScreen -->
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/PRIMARY_5000
        </item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">
            @drawable/ic_launcher_foreground
        </item>
    </style>

    <style name="Theme.Weather" parent="Base.Theme.Weather" />
</resources>